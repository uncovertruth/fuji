{
  "name": "@uncovertruth/fuji",
  "version": "0.0.0",
  "bugs": {
    "url": "https://github.com/uncovertruth/fuji/issues"
  },
  "devDependencies": {
    "@uncovertruth/stylelint-config": "^0.8.0",
    "cpx": "^1.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "stylelint": "^8.4.0"
  },
  "homepage": "https://github.com/uncovertruth/fuji#readme",
  "keywords": [
    "ghost",
    "theme"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/uncovertruth/fuji.git"
  },
  "scripts": {
    "assets": "cpx 'src/**/*.{hbs,json,eof,svg,ttf,woff}' dist",
    "build": "run-s clean assets build:*",
    "build:style": "node-sass src/scss/screen.scss dist/assets/css/screen.css",
    "clean": "rimraf dist",
    "lint": "stylelint 'src/**/*.scss'",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "start": "concurrently --kill-others 'npm run assets -- -w'",
    "test": "npm run build"
  }
}
