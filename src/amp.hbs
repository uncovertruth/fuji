<body class="amp-template">
  <header class="main-header">
    <nav class="blog-title">
      {{#if @blog.logo}}
      <a href="{{@blog.url}}"><amp-img src="{{@blog.logo}}" alt="{{@blog.title}}" width="300" height="30" layout="responsive"></amp-img></a>
      {{else}}
      <a href="{{@blog.url}}">{{@blog.title}}</a>
      {{/if}}
    </nav>
  </header>

{{#post}}
  <div class="wrapper">
    <main class="content" role="main">
      <article class="post">

        <header class="post-header">
          <h1 class="post-title">{{title}}</h1>
          <section class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">Posted on {{date format="MMMM DD, YYYY"}}</time>
            <ul class="article-tag">
              {{#foreach tags}}
              <li>
                <a href="{{url}}">{{name}}</a>
              </li>
              {{/foreach}}
            </ul>
          </section>
        </header>
        {{#if feature_image}}
        <figure class="post-image">
          <amp-img src="{{img_url feature_image absolute="true"}}" width="600" height="400" layout="responsive"></amp-img>
        </figure>
        {{/if}}
        <section class="post-content">

          {{amp_content}}

        </section>
        <section class="read-next-story">
          <div>
            {{#next_post}}
            <div class="next">
              <h3><a href="{{url}}">{{title}}</a></h3>
            </div>
            {{/next_post}}
          </div>

          <div>
            {{#prev_post}}
            <div class="prev">
              <h3><a href="{{url}}">{{title}}</a></h3>
            </div>
            {{/prev_post}}
          </div>
        </section>

        {{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" as |related|}}
          {{#if related}}
            <section class="related-article">
              <h4>同一カテゴリの関連記事</h4>
              <ul>
                {{#foreach related}}
                  <li>
                    <a href="{{url}}">
                      {{#if feature_image}}
                        <p class="featured-image">
                          <amp-img src="{{img_url feature_image absolute="true"}}" width="369" height="214" layout="responsive"></amp-img>
                        </p>
                      {{/if}}
                      <ul class="article-tag">
                        {{#foreach tags}}
                          <li>{{name}}</li>
                        {{/foreach}}
                      </ul>
                      <div class="article-content">
                        <time datetime="{{date format='YYYY-MM-DD'}}">Posted on {{date format="MMMM DD, YYYY"}}</time>
                        <h5>{{title}}</h5>
                        <p class="article-text">{{excerpt characters="140"}}...</p>
                      </div>
                    </a>
                  </li>
                {{/foreach}}
              </ul>
            </section>
          {{/if}}
        {{/get}}

        <div class="widget">
          <ul class="widget-share">
            <li class="share-item twitter"><amp-social-share type="twitter" width="40"height="30"></amp-social-share></li>
            <li class="share-item facebook"><amp-social-share type="facebook" width="40"height="30"></amp-social-share></li>
            <li class="share-item google-plus"><amp-social-share type="gplus" width="40"height="30"></amp-social-share></li>
          </ul>
        </div>

        {{> breadcrumb}}

      </article>
    </main>
  </div>
{{/post}}
<footer class="site-footer clearfix">
  <section class="copyright">&copy; <a href="{{@blog.url}}">{{@blog.title}}</a> {{date format="YYYY"}}</section>
</footer>
</body>
